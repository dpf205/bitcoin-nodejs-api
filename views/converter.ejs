<html>
	<% include head %>

	<body>
		<% include header %>

		<div class="container">
			  <div class="row">
			    <div class="col-md-6">
					<div class="form-group">
						<label for="btc2usd">BTC</label>
						<input type="text" class="form-control" id="btc" placeholder="Enter BTC quantity"
						onkeyup="btcToUSD();" onChange="btcToUSD();" value="1">
					</div>
				</div>

		<div class="col-md-6">
					<div class="form-group">
						<label for="usd2btc">USD</label>
						<input type="text" class="form-control" id="usd" placeholder="Enter USD quantity"
						onkeyup="usdToBTC();" onChange="usdToBTC();" value="<%= last_price %>">
					</div>
				</div>
			</div>
		</div>

		<script>

		function btcToUSD(){
			var market_price = <%= last_price %> ;
			var btc_value = document.getElementById("btc").value;
			var calc = btc_value * market_price.toFixed(2);
			document.getElementById("usd").value =  calc.toFixed(2);
		};

		function usdToBTC(){
			var market_price = <%= last_price %> ;
			var usd_value = document.getElementById("usd").value;
			var calc = usd_value / market_price.toFixed(2);
			document.getElementById("btc").value =  calc.toFixed(8);
		};

		</script>
	</body>
</html>
